public class SquarePattern {
    public static void main(String[] args) {
        int rows = 4; 
        for (int i = 1; i <= rows; i++) {
            for (int j = 1; j <= i; j++) {
                System.out.printf("%-6d", (int)Math.pow((i - 1) * rows + j, 2));
            }
            System.out.println();
        }
    }
}
